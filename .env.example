# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@db:5432/obview
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=obview

# Session Configuration
SESSION_SECRET=your_secure_session_secret_here

# Email Configuration (SendGrid)
SENDGRID_API_KEY=your_sendgrid_api_key_here

# Initial Admin User (used on first launch)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=change_me_immediately
ADMIN_NAME=Administrator
ADMIN_EMAIL=admin@yourdomain.com

# Registration Control
# Disable registration for new users (optional)
# Set to 'true' to disable the registration option on the auth page
# For Docker deployments: This environment variable must be set before building the Docker image
# Example: VITE_DISABLE_REGISTRATION=true docker-compose up --build
VITE_DISABLE_REGISTRATION=false